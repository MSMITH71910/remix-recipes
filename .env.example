# Database
# For local development, you can use SQLite:
# DATABASE_URL="file:./prisma/dev.db"
# For production with PostgreSQL:
DATABASE_URL="postgresql://username:password@localhost:5432/remix_recipes?schema=public"

# Session Secret (generate a random string for production)
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
AUTH_COOKIE_SECRET="your-super-secret-auth-key-change-this-in-production"

# Optional: File storage (for recipe images)
STORAGE_PATH="./public/recipe-images"

# Email Configuration (choose one)
# Option 1: Resend (recommended - free tier available)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Option 2: Mailgun (legacy)
MAILGUN_API_KEY="your-mailgun-api-key"
MAILGUN_DOMAIN="your-domain.com"
MAILGUN_FROM_EMAIL="noreply@your-domain.com"

# Production environment
NODE_ENV="production"