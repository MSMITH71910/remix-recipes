{
  "name": "remix-recipes",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "build:netlify": "npm run db:setup && react-router build",
    "build:render": "node scripts/init-db.cjs && react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "db:setup": "npx prisma generate && npx prisma migrate deploy && npx prisma db seed",
    "postinstall": "npx prisma generate",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "db:generate": "prisma generate",
    "db:manual-seed": "node scripts/manual-seed.cjs",
    "db:setup-manual": "node scripts/setup-database.cjs"
  },
  "dependencies": {
    "@mjackson/form-data-parser": "^0.9.1",
    "@prisma/client": "^6.14.0",
    "@react-router/node": "^7.7.1",
    "@react-router/serve": "^7.7.1",
    "@types/react-modal": "^3.16.3",
    "bcryptjs": "^3.0.2",
    "form-data": "^4.0.4",
    "isbot": "^5.1.27",
    "mailgun.js": "^12.0.3",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-modal": "^3.16.3",
    "react-router": "^7.7.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@react-router/dev": "^7.7.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
